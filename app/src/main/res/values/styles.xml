<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_cyan_200</item>
        <item name="colorPrimaryDark">@color/md_cyan_200</item>
        <item name="colorAccent">@color/md_cyan_200</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/md_grey_600</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="colorControlNormal">@color/md_blue_grey_200</item>
        <item name="colorAccent">@color/md_grey_400</item>
    </style>

    <style name="IconGenText">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

</resources>

