<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <!--툴바의 TextView 가운데 정렬-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_light_blue_600"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_above="@+id/viewpager_main"
         android:layout_weight="0.003"
         android:background="@drawable/tab_shadow" />-->

    <!--커스텀한 뷰페이저-->

-->

    <LinearLayout
        android:id="@+id/ll_fragment_container"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.895"
        android:orientation="vertical"/>

   <!-- &lt;!&ndash;구분선&ndash;&gt;
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/tab_main"
        android:layout_weight="0.005"
        android:background="@drawable/tab_shadow" />
-->
    <!--하단 메뉴바-->
    <LinearLayout
        android:id="@+id/tab_club"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:background="@color/md_purple_400"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/iv_tab_info"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:padding="5dp"
            android:src="@drawable/common_google_signin_btn_text_dark"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/iv_tab_map"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:padding="5dp"
            android:src="@drawable/common_google_signin_btn_text_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <ImageView
            android:id="@+id/iv_tab_schedule"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:padding="5dp"
            android:src="@drawable/common_google_signin_btn_text_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <ImageView
            android:id="@+id/iv_tab_board"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:padding="5dp"
            android:src="@drawable/common_google_signin_btn_text_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />


    </LinearLayout>

</LinearLayout>
